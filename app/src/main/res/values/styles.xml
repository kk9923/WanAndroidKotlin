<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">#e6e6e6</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="AppTheme.Day" parent="AppTheme">
        <item name="common_bg">@color/white</item>
        <item name="nav_header_bg">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.Night" parent="AppTheme">
        <item name="common_bg">#424242</item>
        <item name="nav_header_bg">#424242</item>
    </style>

</resources>
