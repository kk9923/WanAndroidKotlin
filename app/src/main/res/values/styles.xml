<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">#e6e6e6</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="AppTheme.Day">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="common_color">@color/black</item>
        <item name="common_bg">@color/white</item>
        <item name="channel_color">@color/black</item>
        <item name="channel_bg">@color/white</item>
        <item name="channel_my_color">@color/black</item>
        <item name="news_title">@color/black</item>
        <item name="news_bg">@color/white</item>
    </style>

    <style name="AppTheme.Night">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="common_color">@color/textColorPrimary</item>
        <item name="channel_color">@color/tip</item>
        <item name="common_bg">#424242</item>
        <item name="channel_bg">#424242</item>
        <item name="channel_my_color">@color/tip</item>
        <item name="news_title">@color/tip</item>
        <item name="news_bg">@color/textColorPrimary</item>
    </style>

</resources>
